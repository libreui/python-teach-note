   "source": [
    "# 将数字转换为2-16进制字符串\n",
    "def to_str(n, base):\n",
    "    convert_string = '0123456789ABCDEF'\n",
    "    if n < base:\n",
    "        return convert_string[n]\n",
    "    else:\n",
    "        return to_str(n // base, base) + convert_string[n % base]\n",
    "\n",
    "print(to_str(17, 10))\n",
    "print(to_str(45, 2))\n",
    "print(to_str(255, 16))\n"
   ],
   "outputs": [],
   "execution_count": null
